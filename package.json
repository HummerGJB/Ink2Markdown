{
  "name": "ink2markdown",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "test": "rm -rf .tmp-tests && tsc -p tsconfig.test.json && node --test \".tmp-tests/src/tests/**/*.test.js\"",
    "ci": "npm run lint && npm run test && npm run build",
    "setup:hooks": "sh scripts/setup-hooks.sh"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.20.2",
    "obsidian": "^1.5.12",
    "typescript": "^5.3.3"
  }
}
